generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id          String   @id
  title       String
  description String
  sizes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  imageUrls   String[]
  type        String
  governorate String
}

model Profile {
  id          String   @id(map: "profiles_pkey") @db.Uuid
  name        String
  profileUrl  String?
  bio         String?
  phoneNumber String?
  links       String[]
}

enum ProductType {
  UpperBody
  LowerBody
}
